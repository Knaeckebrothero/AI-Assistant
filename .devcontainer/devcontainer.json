{
    "name": "Quarkus Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "mounts": [
        // This mounts the host machine's Docker socket into the container
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "features": {
        // If you want Docker CLI convenience inside the container:
        "docker-from-docker": "latest"
    },
    "extensions": [
        "redhat.vscode-xml",           // Helpful for XML config files
        "redhat.vscode-yaml",          // Helpful for YAML configs (e.g. application.yaml)
        "vscjava.vscode-java-pack",    // Java support
        "richardwillis.vscode-gradle", // Gradle tasks in VS Code
        "quarkusio.quarkus-vscode"     // Quarkus extension
    ],
    // Commands to run after the container is created
    "postCreateCommand": "./gradlew build",
    "remoteUser": "vscode"
}
